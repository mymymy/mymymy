@font-face {
  font-family: "MD Nichrome";
  src:
    local("MD Nichrome"),
    url("../fonts/MDNichrome-Variable.woff") format("woff");
    url("../fonts/MDNichrome-Variable.woff2") format("woff2");
}

html, body
	font-family: "Old Standard TT"
	font-weight: 400
	font-size: 24px
	line-height: 1.3
	
	+below(500px)
		font-size: 22px

uppercase()
	text-transform: uppercase
	letter-spacing: 0.1em
	
smallcaps()
	uppercase()
	font-size: 0.8em
	
fontSmoothing()
	-moz-osx-font-smoothing: grayscale
	-webkit-font-smoothing: antialiased

oldstyleNumerals()
	font-variant-numeric: oldstyle-nums

h1, h2, h3, h4, h5
	font-weight: 400
	
a
	text-decoration: none
	border-bottom: 1px solid

p
	oldstyleNumerals()